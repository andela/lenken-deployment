{
    "builders":[
        {
            "type": "googlecompute",
            "account_file": "../auth_lenken_app.json",
            "project_id": "{{ user `project_id`}}",
            "source_image": "debian-8-jessie-v20180109",
            "ssh_username": "lenken-api",
            "zone": "europe-west1-b",
            "image_name": "lenken-backend-{{ user `environment` }}-{{timestamp}}"
        }
    ],
    "provisioners":[
        {
            "type": "ansible",
            "playbook_file": "./ansible/{{ user `provisioner-file` }}",
            "ansible_env_vars": ["ANSIBLE_HOST_KEY_CHECKING=False"],
            "extra_arguments": [
                "--vault-password-file",
                "~/.secret",
                "--extra-vars",
                "new_relic_licence={{ user `new_relic_licence` }}",
                "--extra-vars",
                "commit_id={{ user `commit_id` }}",
                "--extra-vars",
                "new_relic_app={{ user `new_relic_app` }}",
                "--extra-vars",
                "env_variable={{ user `env_variable` }}",
                "--extra-vars",
                "domain={{ user `domain` }}",
                "--extra-vars",
                "env={{ user `environment` }}",
                "--extra-vars",
                "elk_ip=35.237.239.139",
                "--extra-vars",
                "backend_build_commit={{ user `backend_build_commit` }}"
            ]
        }
    ]
}
