{
    "builders": [
        {
            "type": "googlecompute",
            "account_file": "{{ user `credential_file` }}",
            "project_id": "{{ user `project_id`}}",
            "source_image": "debian-8-jessie-v20180109",
            "ssh_username": "lenken-frontend",
            "zone": "europe-west1-b",
            "image_name": "lenken-frontend-{{ user `environment`}}"
        }
    ],

    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "./ansible/{{ user `provisioner-file` }}",
            "ansible_env_vars": ["ANSIBLE_HOST_KEY_CHECKING=False"],
            "extra_arguments": [
                "--vault-password-file",
                "~/.secret",
                "--extra-vars",
                "commit_id={{ user `commit_id` }}",
                "--extra-vars",
                "env_variable={{ user `env_variable` }}",
                "--extra-vars",
                "domain={{ user `domain` }}",
                "--extra-vars",
                "frontend_build_commit={{ user `frontend_build_commit` }}",
                "--extra-vars",
                "frontend_env_variable={{ user `frontend_env_variable` }}",
                "--extra-vars",
                "env={{ user `environment` }}",
                "--extra-vars",
                "elk_ip=35.237.239.139",
                "--extra-vars",
                "frontend_env_prod={{ user `frontend_env_prod` }}"
            ]
        }
    ]
}
