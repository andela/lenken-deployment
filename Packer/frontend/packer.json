{
    "builders": [
        {
            "type": "googlecompute",
            "account_file": "../auth_lenken_app.json",
            "project_id": "{{ user `project_id`}}",
            "source_image": "debian-8-jessie-v20180109",
            "ssh_username": "lenken-frontend",
            "zone": "europe-west1-b",
            "image_name": "lenken-frontend-{{ user `environment`}}"
        }
    ],

    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "./ansible/provisioner.yml",
            "ansible_env_vars": ["ANSIBLE_HOST_KEY_CHECKING=False"],
            "extra_arguments": [
                "--vault-password-file",
                "~/.secret",
                "--extra-vars",
                "commit_id={{ user `commit_id` }}",
                "--extra-vars",
                "env_variable=lenken_frontend_production_env",
                "--extra-vars",
                "domain=lenken.andela.com",
                "--extra-vars",
                "frontend_build_commit=production_frontend_build_commit",
                "--extra-vars",
                "frontend_env_variable=lenken_frontend_production_env_ts",
                "--extra-vars",
                "frontend_env_prod=lenken_frontend_production_env_prod"
            ]
        }
    ]
}